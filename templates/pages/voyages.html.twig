{% extends "basefront.html.twig" %}

{% block body %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th class="text-left" scopre="col">
                    Ville
                    <a href="{{ path('voyages.sort', {champ:'ville', ordre:'ASC'}) }}" class="btn btn-primary btn-sm active" role="button" aria-pressed="true"><</a>
                    <a href="#" class="btn btn-primary btn-sm active" role="button" aria-pressed="true">></a>
                </th>
                <th class="text-left" scopre="col">Pays</th>
                <th class="text-right" scope="col">Note</th>
                <th class="text-center" scopre="col">Date</th>
            </tr>
        </thead>
        <tbody>
            {% for visite in visites %}
                <tr>
                    <td>
                        <h5 classe="text-primary">
                            <a href="#">{{ visite.ville }}</a>
                        </h5>
                    </td>
                    <td>
                        {{ visite.pays }}
                    </td>
                    <td class="text-right">
                    <strong>
                        {% if visite.note<10 %}
                            <div class="text-danger">
                                {{ visite.note  }}/20
                            </div>
                        {% else %}
                            <div class="text-success">
                                {{ visite.note }}/20
                            </div>
                        {% endif %}
                    </strong>
                </td>
                    <td class="text-center">
                        {{ visite.datecreationstring }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}